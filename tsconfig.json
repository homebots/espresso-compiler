{
  "compilerOptions": {
    "module": "ESNext",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.ts", ".vscode/helpers.ts"]
}
