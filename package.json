{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "A template for Typescript projects",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "ci": "npm ci && npm run lint && npm run test",
    "build": "rm -rf dist/ && sh update-grammar.sh && tsc -p tsconfig.build.json",
    "tdd": "jest --watchAll",
    "lint": "eslint --quiet src/**/*.ts --ignore-pattern src/grammar.ts",
    "all": "npm run build && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/homebots/typescript-template.git"
  },
  "keywords": [
    "homebots"
  ],
  "author": "Darlan Alves <me@darlanalv.es>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/homebots/typescript-template/issues"
  },
  "homepage": "https://github.com/homebots/typescript-template#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@types/pegjs": "^0.10.2",
    "pegjs": "^0.10.0"
  }
}
